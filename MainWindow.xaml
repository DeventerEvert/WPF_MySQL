<Window x:Class="WPF_MySQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MySQL"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        DataContext="{StaticResource QuiztimeController}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0"
                  ItemsSource="{Binding Path=Quizzes}"
                  SelectedItem="{Binding Path=ActiveQuiz,UpdateSourceTrigger=PropertyChanged}"
                  DisplayMemberPath="Name"
                  Name="cmbCombo"
                  />
        <Button Grid.Row="1" Content="Button" Name="btnTest"/>
        
        <Label Grid.Row="2"
               Content="{Binding Path=ActiveQuiz.Name}"
               Name="lblTest" />
        
        <ListBox Grid.Row="3" ItemsSource="{Binding Path=ActiveQuiz.Questions}" DisplayMemberPath="Desc" />


    </Grid>
</Window>
